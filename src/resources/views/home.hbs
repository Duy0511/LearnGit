<h1>Home page</h1>
<div class='mt-4'>
  <div class='row'>
    {{#each cources}}
      <div class='col-sm-4'>
        <div class='card card-item-cources'>
          <a href='/cources/{{this.slug}}'><img
              src='{{this.image}}'
              class='card-img-top'
              alt='ảnh các vid'
            /></a>

          <div class='card-body'>
            <a href='/cources/{{this.slug}}'><h5
                class='card-title'
              >{{this.name}}</h5></a>
            <p class='card-text'>{{this.description}}.</p>
            <a href='/cources/{{this.slug}}' class='btn btn-primary'>Học ngay</a>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>