<form action="/cources/{{cource._id}}/edit/update?_method=PUT" method="POST">
        <div class="mt-4">
            <div class="mb-3">
                <label for="name" class="form-label">{{cource.name}}</label>
                <input
                    type="text"
                    class="form-control"
                    name="name"
                    form-control="name"
                    value="{{cource.name}}"
                    
                />
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">{{cource.description}}</label>
                <input
                    type="text"
                    class="form-control"
                    name="description"
                    id="description"
                    value="{{cource.description}}"
                    
                />
            </div>
            <div class="mb-3">
                <label for="videoId" class="form-label">{{cource.videoId}}</label>
                <input
                    type="text"
                    class="form-control"
                    name="videoId"
                    id="videoId"
                    value="{{cource.videoId}}"
                    
                />
            </div>
            <div class="mb-3">
                <label for="videoLink" class="form-label">{{cource.videoLink}}</label>
                <input
                    type="text"
                    class="form-control"
                    name="videoLink"
                    id="videoLink"
                    value="{{cource.videoLink}}"
                />
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-primary mb-3">Update</button>
            </div>
        </div>
    </form>